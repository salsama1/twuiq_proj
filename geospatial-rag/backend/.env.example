# =============================================================================
# GEOSPATIAL RAG - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# OLLAMA (Your Home PC)
# =============================================================================
# Replace with your Tailscale IP (find it in Tailscale app on Home PC)
OLLAMA_BASE_URL=http://100.100.100.100:11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_TIMEOUT=120

# =============================================================================
# POSTGIS DATABASE
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DATABASE=geodatabase

# =============================================================================
# GOOGLE CLOUD (Voice - STT/TTS)
# =============================================================================
# Path to your service account key file
GOOGLE_CLOUD_CREDENTIALS=./credentials/google-cloud-key.json
GOOGLE_CLOUD_PROJECT=your-project-id

# Speech-to-Text settings
STT_LANGUAGE_CODE=en-US
# Arabic is auto-detected as alternative

# Text-to-Speech settings
TTS_LANGUAGE_CODE=en-US
TTS_VOICE_NAME=en-US-Neural2-J
TTS_ARABIC_VOICE_NAME=ar-XA-Wavenet-B

# =============================================================================
# CESIUM ION (3D Maps)
# =============================================================================
# Get a free token at: https://cesium.com/ion/tokens
CESIUM_ION_TOKEN=your_cesium_token_here

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=false
EXPORT_DIRECTORY=./exports
MAX_EXPORT_RECORDS=10000

# CORS - Add your frontend URL if different
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:5500"]
